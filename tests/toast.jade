extends ./layout

block title
  | Toast

block content
    c-panel(title="toast" legend="toast")
        div( style="padding: 30px 0;")
            c-button(size="mini",type="primary inline", @click="showToast1 =! showToast1")| success
            c-button(size="mini",type="primary inline", @click="showToast2 =! showToast2")| error
            c-button(size="mini",type="primary inline", @click="showToast3 =! showToast3")| Loading

            c-toast(message="操作成功", type="success", v-model="showToast1", :show-time="1000") 
            c-toast(message="操作失败", type="error", v-model="showToast2", :show-time="1000") 
            c-toast(message="正在加载中...", type="loading", v-model="showToast3") 
                


block script
  script.
    new Vue({
      el: '#app',
      data () {
        return {
            showToast1: false,
            showToast2: false,
            showToast3: false,
        }
      },
      watch: {
      }
    })
